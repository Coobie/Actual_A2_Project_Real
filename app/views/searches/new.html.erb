<h1> Advanced Search </h1>
<br>
<%= form_for @search do |s| %>
	<br><b><%= "Device name"%></b>
	<br><%= s.text_field :device_name %>
	<br><%= s.label :device_type %>
	<br><%= s.select :device_type, options_for_select(@device_type), :include_blank => true %>
  <br><b><%= "Device manufacturer" %></b>
  <br><%= s.select :device_manufacturer, options_for_select(@device_manufacturer), :include_blank => true %>
  <br><%= s.label :device_model %>
	<br><%= s.text_field :device_model %>
<br>

<br>
  <b><%="Minimum Original Cost of Device" %></b> <br><%=s.text_field :min_price, size: 10 %><br>
  <b><%="Maximum Original Cost of Device"%></b> <br><%=s.text_field :max_price,size: 10 %>

  <br><br><%= "The format for the dates is YYYY-MM-DD" %>
  <br><b><%= "Find Device(s) that started between" %></b><br>
  <%= s.text_field :start_date,"data-provide"=>'datepicker' %>
  <b><%="and"%></b> <%= s.text_field :start_date_min,"data-provide"=>'datepicker' %>
  <br><br><b><%= "Find Device(s) that expire between" %><br></b>
	<%= s.text_field :expiry_date,"data-provide"=>'datepicker' %>
	<b><%="and"%></b> <%= s.text_field :expiry_date_min,"data-provide"=>'datepicker' %>

	<br><%= s.submit "Search" %>
<% end %>

<%= link_to "Back",devices_path %>
