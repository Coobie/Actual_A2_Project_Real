<h1>Search results</h1>
<p><%= link_to "back", new_search_path %> </p>

	<h2>Device Search Result</h2>
<% if @search.search_devices.empty? %>
	<p>No results found for devices </p>
<% else %>

<table class="table1" width="35%" >
	<tr>
		<th>Device Name  </th>
		<th>Device Owner</th>
		<th>Device Type  </th>
		<th>Action  </th>
	</tr>
		<% @search.search_devices.each do |c|  %>
	<td><%= link_to "#{c.device_name}",device_path(c) %> </td>
	<td><%= link_to "#{c.user.first_name}",user_path(c.user_id) %></td>
	<td><%= link_to "#{c.device_type}",device_path(c) %> </td>
	<td><%= link_to "Edit ", edit_device_path(c) %></td>
</tr>
<% end %>
</table>
<% end %>
